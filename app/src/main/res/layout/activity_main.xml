<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.wk.mycustomview.widget.animate.CircleView
            android:id="@+id/cvAnimator"
            android:layout_width="match_parent"
            android:layout_height="240dp" />

        <com.wk.mycustomview.widget.canvas.CanvasView
            android:id="@+id/cvView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cv_scale="0.5" />

        <com.wk.mycustomview.widget.animate.PointFView
            android:id="@+id/pointF"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <com.wk.mycustomview.widget.animate.ProvinceView
            android:id="@+id/provinceText"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <com.wk.mycustomview.widget.text.MultiLineTextView
            android:layout_width="wrap_content"
            android:layout_height="335dp" />

        <com.wk.mycustomview.widget.text.SportView
            android:layout_width="match_parent"
            android:layout_height="305dp" />

        <com.wk.mycustomview.widget.DashboardView
            android:id="@+id/dashboardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.wk.mycustomview.widget.xfermode.ScratchCardView
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="@color/teal_200" />

        <com.wk.mycustomview.widget.AvatarView
            android:id="@+id/pieView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:avatar_divide_width="5dp"
            app:src="@drawable/bg_rain" />

        <TextView
            android:id="@+id/tvSwitchPie"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@color/design_default_color_secondary"
            android:gravity="center"
            android:text="switch pie"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>